<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<property name="myeclipse.connection.profile">ATMMS</property>
		<property name="connection.url">
			jdbc:mysql://www.salibs.cn:3306/ATMMS
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">121021</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		
		<property name="hbm2ddl.auto">update</property>
		<property name="hibernate.connection.autocommit">true</property>
		
		<!-- 连接池配置 -->
        <property name="com.mchange.v2.c3p0.ComboPooledDataSource">
            org.hibernate.connection.C3P0ConnectionProvider
        </property>
        
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.timeout">50000</property>
        <property name="hibernate.c3p0.max_statements">100</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>
        <!-- 当连接池耗尽并接到获得连接的请求，则新增加连接的数量 -->
        <property name="hibernate.c3p0.acquire_increment">2</property>
        <!-- 是否验证，检查连接 -->
        <property name="hibernate.c3p0.validate">true</property>
		
		<property name="connection.characterEncoding">utf8</property>
		
		<mapping resource="com/ATMMS/imudges/DAO/Subsystem.hbm.xml" />
		<mapping resource="com/ATMMS/imudges/DAO/Item.hbm.xml" />
		<mapping resource="com/ATMMS/imudges/DAO/Factory.hbm.xml" />
		<mapping resource="com/ATMMS/imudges/DAO/Major.hbm.xml" />
		<mapping resource="com/ATMMS/imudges/DAO/User.hbm.xml" />
		<mapping resource="com/ATMMS/imudges/DAO/Option.hbm.xml" />
		<mapping resource="com/ATMMS/imudges/DAO/Itemchange.hbm.xml" />

	</session-factory>

</hibernate-configuration>